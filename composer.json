{
    "name": "chgst/chgst",
    "description": "Lightweight CQRS/ES implementation",
    "type": "library",
    "license": "MIT",
    "require": {
        "chgst/common":"^0.2"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "spec/"
        }
    },
    "require-dev": {
        "phpspec/phpspec": "^6",
        "friends-of-phpspec/phpspec-code-coverage": "^4.3",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.2"
        }
    }
}
