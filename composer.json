{
    "name": "chgst/chgst",
    "description": "Lightweight CQRS/ES implementation",
    "type": "library",
    "license": "MIT",
    "require": {
        "chgst/common":"^0.3.1"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\": "spec/"
        }
    },
    "require-dev": {
        "phpspec/phpspec": "^7.4.0",
        "friends-of-phpspec/phpspec-code-coverage": "^v6.3.0",
        "php-coveralls/php-coveralls": "^v2.6.0"
    },
    "config": {
        "platform": {
            "php": "8.2"
        }
    }
}
